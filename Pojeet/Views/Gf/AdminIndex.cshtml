@model Pojeet.ViewModels.CommandeViewModel
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Admin";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header pl-3">
        <h1 class="pt-2 mb-2 font-size-18">Graphiques</h1>
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>15</h3>

                            <p>Nombre de commandes</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-shopping-bag"></i>
                        </div>
                        <a href="#" class="small-box-footer">18 sept. 2021</a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>1530 € <sup style="font-size: 18px">TTC</sup></h3>

                            <p>Chiffre d'affaire</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-coins"></i>
                        </div>
                        <a href="#" class="small-box-footer">18 sept. 2021</a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3>44</h3>

                            <p>Nouveaux Helper</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <a href="#" class="small-box-footer">18 sept. 2021</a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>65 €</h3>

                            <p>Marge brut</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-chart-pie"></i>
                        </div>
                        <a href="#" class="small-box-footer">18 sept. 2021</a>
                    </div>
                </div>
                <!-- ./col -->
            </div>
            <!-- End Small boxes (Stat box) -->
            <!-- Content Wrapper. Contains page content -->
            <!-- Main content -->
            <section class="content">
                <div class="row">

                    <!-- Col LEFT -->
                    <div class="col-md-6">
                        <!-- Graph Marge brut -->
                        <div class="card card-primary">
                            <div class="card-header flex-row">
                                <h3 class="card-title">Marge brut</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="chart">
                                    <canvas id="areaChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                                </div>
                            </div>
                        </div>
                        <!-- End Graph Marge brut -->
                        <!-- Donut commandes -->
                        <div class="card card-danger">
                            <div class="card-header">
                                <h3 class="card-title">Commande monsuelle</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <canvas id="donutChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                            </div>
                        </div>
                        <!-- End Donut commandes -->
                    </div>
                    <!-- End col LEFT -->
                    <!-- Col RIGHT -->
                    <div class="col-md-6">
                        <!-- Graph  Nouveaux clients-->
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">Nouveaux clients</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="chart">
                                    <canvas id="lineChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                                </div>
                            </div>
                        </div>
                        <!-- Graph  Nouveaux clients-->
                        <!-- Chiffre d'affaire -->
                        <div class="card card-success">
                            <div class="card-header">
                                <h3 class="card-title">Chiffre d'affaire</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="chart">
                                    <canvas id="barChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                                </div>
                            </div>
                        </div>
                        <!-- End Chiffre d'affaire -->
                    </div>
                    <!-- End Col RIGHT -->
                </div>
                <!-- /.row -->
            </section>

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
