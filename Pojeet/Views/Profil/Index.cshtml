                                        </div>

                                        <div class="d-flex mt-3">
                                            <div class=" w-100 col-6">
                                                <a class="btn w-100 btnOrange" href="http://localhost:5000/Annonce/SupprimerAnnonce?id=@annonce.Id">Supprimer</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }



