@model Pojeet.ViewModels.UtilisateurViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Connexion";
    ViewBag.ColorNav = "navbar-color";
}

@section stylesheets {
    <link rel="stylesheet" media="all" href="~/css/Profil.css">
    <link rel="stylesheet" media="all" href="~/css/Inscription_form.css">
}


<div class="image-container" style="background: url('@Url.Content("~/img/section_inscription.svg")') bottom center; background-size: cover; padding-top:50px">
    <div class="container">
        <div class="row d-flex justify-content-center">

            <div class="col-sm-6 col-sm-offset-2">

                <div class="w-container">

                    <div class="card mt-5 mb-5" data-color="red" id="wizard" style="box-shadow: 0 20px 16px -15px rgba(0, 0, 0, 0.57);">
                        <div class="tab-content d-flex flex-column justify-content-center">
                            <h3 class="text-center">Connexion</h3>
                            @using (Html.BeginForm())
                            {
                                <div class="row justify-content-center mt-3">
                                    <div class="col-sm-10 col-sm-offset-1">
                                        @Html.LabelFor(model => model.CompteConsumer.Pseudo)
                                        @Html.TextBoxFor(model => model.CompteConsumer.Pseudo, new { @class = "form-control", placeholder = "Pseudo" })
                                        @Html.ValidationMessageFor(model => model.CompteConsumer.Pseudo, "", new { @style = "color:red" })
                                    </div>

                                    <div class="col-sm-10 col-sm-offset-1 mt-3 mb-1">
                                        @Html.LabelFor(model => model.CompteConsumer.MotDePasse)
                                        @Html.TextBoxFor(model => model.CompteConsumer.MotDePasse, new { @type = "password", @class = "form-control", placeholder = "Mot de passe" })
                                        @Html.ValidationMessageFor(model => model.CompteConsumer.MotDePasse, "", new { @style = "color:red" })
                                    </div>
                                    <div class="col-12 d-flex justify-content-center mt-5">
                                        <!-- Submit Button-->
                                        <button class="btn btn-finish btn-fill btn-danger btn-wd" type="submit">Se Connecter</button>
                                    </div>
                                    <div class="d-flex justify-content-center mt-3">
                                        @Html.ActionLink("Vous n'avez pas de compte et souhaitez vous inscrire ?", "CreerCompte", "Login", null, null, null, null, new { @class = "linkInscription" })
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









