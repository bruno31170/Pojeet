        {*@
                    @*<input type="hidden" id="aide" name="aide" class="form-control" value="@aide">*@
                    @*@Html.HiddenFor(m => m.aide.Id)*@
                    @*<td><button type="submit" class="btn-primary-e">Répondu</button></td>*@
                    @if (aide.StatutAide == Pojeet.Models.StatutAide.NonEnvoye)
                    {
                        <td> <a style="color: red;" href="@Url.Action("ModifierAide", "Gf", new { id = aide.Id })">Répondu</a></td>
                        @*}*@
                    }
                    else
                    {
                <td>Archivé</td>
                    }
                </tr>

                }
                    
                </tbody>
        </table>
    </div>


</div>

