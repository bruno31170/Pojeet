@{
    var Compte1 = new Pojeet.Models.Dal().ObtenirConsumer(User.Identity.Name);
}
@model Pojeet.ViewModels.UtilisateurViewModel


@{
    Layout = "_LayoutIdentifie";
    ViewBag.Title = "PosterAnnonce";
}



<div class="annonce_form">

    <!-- Annonce -->

    <div class="annonce">

        @using (Html.BeginForm("PosterAnnonce", "Annonce", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {


            <!-- Etat de l'annonce -->

            @Html.HiddenFor(m => m.Anonce.EtatAnnonce, Pojeet.Models.EtatAnnonce.Envoyé)

            <!-- Type d'annonce -->

            <h3>Selectionner le type d'annonce*</h3>
            <span>Besoin : </span> @Html.RadioButtonFor(m => m.Anonce.TypeDeAnnonce, Pojeet.Models.TypeAnnonce.Besoin, "Besoin")
            <span> | Service : </span> @Html.RadioButtonFor(m => m.Anonce.TypeDeAnnonce, Pojeet.Models.TypeAnnonce.Service, "Service")<br>
            @Html.ValidationMessageFor(model => model.Anonce.TypeDeAnnonce)




            <!-- Catégorie --><br>

            <h3>Selectionner la catégorie*</h3>
            @Html.DropDownListFor(m => m.Anonce.CategorieDeAnnonce, new SelectList(Enum.GetValues(typeof(Pojeet.Models.CategorieAnnonce))), "Catégorie")<br><br>
            @Html.ValidationMessageFor(model => model.Anonce.CategorieDeAnnonce)

            <!-- Image -->

            <h3>Selectionner une image</h3>
            <input type="file" name="AnnoncePhoto"/><br><br>


            <!-- FAIRE AFFICHER LES IMAGES -->

            <!-- Titre annonce -->

            <h3>Titre de l'annonce*</h3>

            @Html.TextBoxFor(model => model.Anonce.TitreAnnonce, new { placeholder = "Titre" })<br><br>
            @Html.ValidationMessageFor(model => model.Anonce.TitreAnnonce)





            <!-- Description -->

            <h3>Description*</h3>
            @Html.TextAreaFor(model => model.Anonce.Description, new { @class = "form-control", placeholder = "Description" })<br><br>

            @Html.ValidationMessageFor(model => model.Anonce.Description)


            <!-- Date butoir -->


            <h3>Date butoir*</h3>
            @Html.TextBoxFor(model => model.Anonce.DateButoir, new { @type = "date" })<br><br>

            @Html.ValidationMessageFor(model => model.Anonce.DateButoir)


            <!-- Département -->

            <h3>Département*</h3>
            @Html.TextBoxFor(model => model.Anonce.Localisation, new { placeholder = "Localisation" })<br><br>

            @Html.ValidationMessageFor(model => model.Anonce.Localisation)


            <!-- Prix -->

            <h3>Prix</h3>
            @Html.TextBoxFor(model => model.Anonce.Prix, new { placeholder = "Prix" })<br><br>






            <p>* : Champ obligatoire</p>



            <input type="submit" value="Publier" class="btn-primary-e align-self-center font-size-14 btn-search mb-1 float-right" />


        }
    </div>




</div>

