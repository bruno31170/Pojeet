                        <!-- exemple annonce 1 -->
                        @*Date de parution : @annonce.DateParution<br>
        Catégorie : @annonce.CategorieDeAnnonce<br>
        Auteur : @annonce.ProfilId<br>
        Titre : @annonce.TitreAnnonce<br>
        Type de l'annonce : @annonce.TypeDeAnnonce<br>
        Description : @annonce.Description<br>
        Date butoir : @annonce.DateButoir<br>
        Localisation : @annonce.Localisation<br>
        Prix : @annonce.Prix<br>
        Photo : @annonce.Photo*@
                        @foreach (var annonce in Model.Annonce)
                        {
                            <div class="p-4 mt-3 border-e d-flex flex-column bg-white">
                                <div class="d-flex justify-content-end mb-2">
                                    <p>@annonce.DateParution</p>
                                </div>
                                <div class=" row flex-row">
                                    <div class="wall_post_img col-6">
                                        <img src="assets/img/design_service.png" alt="">
