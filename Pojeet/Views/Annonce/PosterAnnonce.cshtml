@model Pojeet.Models.Annonce

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>HelpMyCar</title>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/PosterAnnonce.css" rel="stylesheet" />

</head>

<body>

    <!-- Entete page-->

    <div class="bottom">

        <!-- Logo-->

        <div class="logo">
            <img src="~/ImagePosterAnnonce/logo1.png" title="Logo"
                 alt="Erreur affichage" style="width:120px" />
        </div>

        <!-- Menu haut droite-->

        <div class="menu">
            <a href="">
                <img src="~/ImagePosterAnnonce/icons8-cloche-200.png"
                     style="float: right;margin-left: 30px;" title="Cloche" alt="Erreur affichage" width="50" />
            </a>
            <a href="">
                <img src="~/ImagePosterAnnonce/icons8-message-100.png"
                     style="float: right;margin-left: 30px;" title="Message" alt="Erreur affichage" width="40" />
            </a>
            <a href="">
                <img src="~/ImagePosterAnnonce/icons8-utilisateur-90.png"
                     style="float: right;margin-left: 30px;" title="User" alt="Erreur affichage" width="40" />
            </a>
            <a href="">
                <img src="~/ImagePosterAnnonce/icons8-loupe-64.png"
                     style="float: right;" title="Loupe" alt="Erreur affichage" width="30" />
            </a>

        </div>
    </div>

    <div class="center">

        <div class="profil">

            <!-- Entete profil-->

            <div style="text-align: center;">



                <a href="">
                    <img src="~/ImagePosterAnnonce/icons8-personne-homme-100.png"
                         style="text-align: center;" title="ImageUser" alt="Erreur affichage" width="70" />
                </a><br>
                <a href=""><label for="Nom" class="inline">Nom</label></a><br>
                <a href=""><label for="Prenom" class="inline">Prenom</label></a><br><br>
            </div>

            <!-- Menu profil -->

            <div>
                <img src="~/ImagePosterAnnonce/icons8-accueil-50.png"
                     style="text-align: center;" title="Profil" alt="Erreur affichage" width="20" />
                <a href=""><label for="MonProfil" class="inline">Mon Profil</label></a> <br><br>

                <img src="~/ImagePosterAnnonce/icons8-write-64.png"
                     style="text-align: center;" title="MesAnnonces" alt="Erreur affichage" width="20" />
                <a href=""><label for="MesAnnonces" class="inline">Mes Annonces</label></a> <br><br>

                <img src="~/ImagePosterAnnonce/icons8-agreement-64.png"
                     style="text-align: center;" title="MesTransactions" alt="Erreur affichage" width="20" />
                <a href=""><label for="MesTransactions" class="inline">Mes Transactions</label></a> <br><br>

                <img src="~/ImagePosterAnnonce/icons8-check-64.png"
                     style="text-align: center;" title="DevenirHelper" alt="Erreur affichage" width="20" />
                <a href=""><label for="DevenirHelper" class="inline">Devenir Helper</label></a> <br><br>

                <img src="~/ImagePosterAnnonce/icons8-info-50.png"
                     style="text-align: center;" title="Aide" alt="Erreur affichage" width="20" />
                <a href=""><label for="Aide" class="inline">Aide</label></a> <br><br>
            </div>
        </div>

        <!-- Annonce -->

        <div class="annonce">

            @using (Html.BeginForm())
            {


            <form>

                <!-- Type d'annonce -->

                <h3>Selectionner le type d'annonce*</h3><br>
                <span>Besoin : </span> @Html.RadioButtonFor(m => m.TypeDeAnnonce, Pojeet.Models.TypeAnnonce.Besoin))
                <span> | Service : </span> @Html.RadioButtonFor(m => m.TypeDeAnnonce, Pojeet.Models.TypeAnnonce.Service)
                @Html.ValidationMessageFor(model => model.TypeDeAnnonce)<br>



                <!-- Catégorie --><br>

                <h3>Selectionner la catégorie*</h3>
                @Html.DropDownListFor(m => m.CategorieDeAnnonce, new SelectList(Enum.GetValues(typeof(Pojeet.Models.CategorieAnnonce))))
                @Html.ValidationMessageFor(model => model.CategorieDeAnnonce)<br>

                <!-- Catégorie -->

                <h3>Selectionner une image</h3><br>
                <input type="file" /><br>

                <!-- FAIRE AFFICHER LES IMAGES -->

                <!-- Titre de l'annonce -->

                <h3>Titre de l'annonce*</h3><br>
                @Html.TextBoxFor(model => model.TitreAnnonce)
                @Html.LabelFor(model => model.TitreAnnonce)
                @Html.ValidationMessageFor(model => model.TitreAnnonce)<br>

                <!-- Description -->

                <h3>Description*</h3><br>
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
                @Html.LabelFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)<br>


                <!-- Date butoire -->

                <h3>Date butoir*</h3><br>
                @Html.TextBoxFor(model => model.DateButoir, new { @type = "date" })
                @Html.LabelFor(model => model.DateButoir)
                @Html.ValidationMessageFor(model => model.DateButoir)<br>


                <!-- Département -->

                <h3>Département*</h3><br>
                @Html.TextBoxFor(model => model.Localisation)
                @Html.LabelFor(model => model.Localisation)
                @Html.ValidationMessageFor(model => model.Localisation)<br>


                <!-- Prix -->

                <h3>Prix</h3><br>
                @Html.TextBoxFor(model => model.Prix)
                @Html.LabelFor(model => model.Prix)<br>



                <input type="submit" value="Publier" class="Publier" /><br>

                <p>* : Champ obligatoire</p>

            </form>
            }
        </div>


    </div>

    <div class="footer">

        <!-- Footer-->

        <a href="" class="miniFooter">Qui sommes-nous ?</a>
        <a href="" class="miniFooter">Trouver votre Helper</a>
        <a href="" class="miniFooter">Annonces</a>
        <a href="" class="miniFooter">Contactez-nous</a>

    </div>

</body>

</html>
