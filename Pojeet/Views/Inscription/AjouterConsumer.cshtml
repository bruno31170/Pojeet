@model Pojeet.Models.CompteConsumer
@{
    Layout = "_Layout";
    ViewBag.Title = "Inscription";
}

<div class="image-container" style="background: url(assets/img/section_inscription.svg) bottom center; background-size: cover">
    <div class="container">
        <div class="row d-flex justify-content-center">

            <div class="col-sm-8 col-sm-offset-2">

                <div class="w-container">
                    <div class="card wizard-card" data-color="red" id="wizard">

                        @using (Html.BeginForm())
                        {
                            <div class="wizard-header">
                                <h3 class="wizard-title">Création de votre profil HelpMyCar</h3>
                            </div>
                            <div class="wizard-navigation">
                                <div class="progress-with-circle">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="1"
                                         aria-valuemin="1" aria-valuemax="4" style="width: 15%;"></div>
                                </div>
                                <ul>
                                    <li>
                                        <a href="#location" data-toggle="tab">
                                            <div class="icon-circle">
                                                <i class="ti-desktop "></i>
                                            </div>
                                            Login
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#type" data-toggle="tab">
                                            <div class="icon-circle">
                                                <i class="ti-user"></i>
                                            </div>
                                            Vous
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#facilities" data-toggle="tab">
                                            <div class="icon-circle">
                                                <i class="ti-map"></i>
                                            </div>
                                            Adresse
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#description" data-toggle="tab">
                                            <div class="icon-circle">
                                                <i class="ti-settings"></i>
                                            </div>
                                            Profil
                                        </a>
                                    </li>
                                </ul>
                            </div>


                            <div class="tab-content d-flex justify-content-center">

                                <div class="tab-pane mt-4" id="location">
                                    <div class="row justify-content-center">

                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                @Html.LabelFor(m => Model.Pseudo, new { @class = "" })<small> (requis)</small>
                                                @Html.TextBoxFor(m => Model.Pseudo, new { @class = "form-control", @id = "pseudo" })
                                                @*@Html.ValidationMessageFor(m => Model.Pseudo)*@
                                            </div>
                                        </div>


                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                @Html.LabelFor(m => Model.Profil.Mail)<small> (requis)</small>
                                                @Html.TextBoxFor(m => Model.Profil.Mail, new { @class = "form-control", @id = "email" })
                                                @*@Html.ValidationMessageFor(m => Model.Profil.Mail)*@
                                            </div>
                                        </div>


                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                @Html.LabelFor(m => Model.MotDePasse, new { @class = "" })<small> (requis)</small>
                                                @Html.TextBoxFor(m => Model.MotDePasse, new { @class = "form-control", @id = "password" })
                                                @*@Html.ValidationMessageFor(m => Model.MotDePasse)*@
                                                @*<label>Mot de passe <small> (requis)</small></label>
                                                    <input name="password" type="password" class="form-control"
                                                           placeholder="" id="password">*@
                                            </div>
                                        </div>

                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                <label>
                                                    Confirmation du mot de passe <small>
                                                        (requis)
                                                    </small>
                                                </label>
                                                <input name="password_confirm" type="password"
                                                       class="form-control" placeholder="">
                                            </div>
                                        </div>


                                    </div>
                                </div>
                                <div class="tab-pane" id="type">
                                    <div class="row d-flex justify-content-center">
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                <label>Genre<small> (requis)</small></label><br>
                                                <select name="genre" class="form-control" id="genre">
                                                    <option value="">
                                                        --Veuillez selectionner votre genre--
                                                    </option>
                                                    <option value="Afghanistan"> Homme </option>
                                                    <option value="Albania"> Femme </option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                @Html.LabelFor(m => Model.Profil.Prenom)<small> (requis)</small>
                                                @Html.TextBoxFor(m => Model.Profil.Prenom, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.Prenom)
                                            </div>
                                        </div>

                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                @Html.LabelFor(m => Model.Profil.Nom)<small> (requis)</small>
                                                @Html.TextBoxFor(m => Model.Profil.Nom, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.Nom)
                                            </div>
                                        </div>

                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                @Html.LabelFor(m => Model.Profil.NumeroTelephone)<small> (requis)</small>
                                                @Html.TextBoxFor(m => Model.Profil.NumeroTelephone, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.NumeroTelephone)
                                            </div>
                                        </div>


                                    </div>
                                </div>
                                <div class="tab-pane" id="facilities">

                                    <div class="row">
                                        <div class="col-sm-7 col-sm-offset-1">
                                            <div class="form-group">
                                                <label>Nom de la rue<small> (requis)</small></label>
                                                <input type="text" class="form-control" placeholder=""
                                                       name="street" id="street">
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label>Numéro de la rue<small> (requis)</small></label>
                                                <input type="text" class="form-control" placeholder=""
                                                       name="streetNumb" id="streetNumb">
                                            </div>
                                        </div>

                                        <div class="col-sm-5 col-sm-offset-1 ">
                                            <div class="form-group">
                                                <label>Ville<small> (requis)</small></label>
                                                <input type="text" class="form-control" placeholder=""
                                                       name="city" id="city">
                                            </div>
                                        </div>
                                        <div class="col-sm-5 ">
                                            <div class="form-group">
                                                <label>Code Postal<small> (requis)</small></label>
                                                <input type="text" class="form-control" placeholder=""
                                                       name="code_postal" id="code_postal">
                                            </div>
                                        </div>

                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                <label>Pays<small> (requis)</small></label><br>
                                                <select name="country" class="form-control" name="pays"
                                                        id="pays">
                                                    <option value="Afghanistan"> France </option>
                                                    <option value="Albania"> Belgique </option>
                                                    <option value="Algeria"> Suisse </option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="description">
                                    <div class="row">
                                        <div class="col-sm-4 col-sm-offset-1 ">
                                            <div class="picture-container">
                                                <div class="picture">
                                                    <img src="assets/img/default-avatar.jpg" class="picture-src"
                                                         id="wizardPicturePreview" title="" />
                                                    <input type="file" id="wizard-picture">
                                                </div>
                                                <h6>
                                                    Choisissez une photo de Profil<small> (optionnel)</small>
                                                </h6>
                                            </div>
                                        </div>

                                        <div class="col-sm-6 ">
                                            <div class="form-group">
                                                @Html.LabelFor(m => Model.Profil.Description)<small> (optionnel)</small>
                                                @Html.TextBoxFor(m => Model.Profil.Description, new { @class = "form-control", @id = "description" })
                                                @Html.ValidationMessageFor(m => Model.Profil.Description)
                                                @*<textarea class="form-control" placeholder=""
                                                    rows="9"></textarea>*@
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="inscription-footer w-100 d-flex justify-content-between">

                                <div class="pull-left col-6">
                                    <input type='button' class='btn btn-previous btn-default btn-wd'
                                           name='previous' value='Précédent' />
                                </div>

                                <div class="pull-right col-6 d-flex justify-content-end">
                                    <input type='button' class='btn btn-next btn-fill btn-danger btn-wd'
                                           name='next' value='Suivant' />
                                    <input type='button' class='btn btn-finish btn-fill btn-danger btn-wd'
                                           name='finish' value='Finish' />
                                </div>

                                <div class="clearfix"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@Html.LabelFor(m => Model.Profil.Adresse)
@Html.TextBoxFor(m => Model.Profil.Adresse)
@Html.ValidationMessageFor(m => Model.Profil.Adresse)

<br />

@Html.LabelFor(m => Model.Profil.DateDeNaissance)
@Html.TextBoxFor(m => Model.Profil.DateDeNaissance)
@Html.ValidationMessageFor(m => Model.Profil.DateDeNaissance)

<br />
@Html.LabelFor(m => Model.Profil.Competence)
@Html.TextBoxFor(m => Model.Profil.Competence)
@Html.ValidationMessageFor(m => Model.Profil.Competence)

<br />


<br />



<input type="submit" value="S'inscrire" />



