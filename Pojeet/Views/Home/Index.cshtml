<div class="mt-3 d-none d-xs-none d-sm-none d-md-none d-lg-flex" style="height:40vh;background-color:#f2f2f2;">
    <div class="col-6 d-flex justify-content-center">
        <img src="~/img/provider.png" alt="" style="object-fit:contain; height:40vh">
    </div>
    <div class="col-6 mt-5">
        <h4 class="text-center mt-2">De nombreux Helpers à votre service</h4>
        <p class="text-center mt-5 mb-5 px-5">
            Vous avez besoin d'un service ? Un provider est là pour vous dépanner
            tout en réalisant des économies !
        </p>
        @Html.ActionLink("Trouvez votre Helper", "AnnonceCatalogue", "Catalogue", null, null, null, null, new
        {
            @class = "d-flex justify-content-center btn my-lg-0 rounded askService px-2 px-3 btnGreen mx-auto",
            @style = "background-color: #52ab98!important; color: white!important; width:50%!important; text-align:center!important"
        })

        @*<a class="nav-link rounded col-6 mx-auto text-center" href=""
            style="background-color: #52ab98; color: white;">Trouver votre provider</a>*@
    </div>
</div>

<div class="d-none d-xs-none d-sm-none d-md-none d-lg-flex align-items-start"
