@model Pojeet.Models.CompteConsumer
@{
    Layout = "_Layout";
    ViewBag.Title = "Modifier mon compte";
    ViewBag.ColorNav = "navbar-color";
}

@section stylesheets {
    <link rel="stylesheet" media="all" href="~/css/Profil.css">
}


<!--SECTION HERO-->
<div class="d-flex align-items-start img_mur overflow-x-hidden position-relative"
     style="background: url('@Url.Content("~/img/section_profil.svg")') bottom center; background-size: cover">
    <div class="w-100" style="padding-top:77px">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-5 col-md-8 col-sm-12 col-12 mt-5">
                    <h1 class="mb-4 display-5 mt-3">
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container d-flex justify-content-center col-12" id="container_profil">
    <div class="col-11 d-flex justify-content-center m-0 p-0">

        <!--Partie Centrale-->
        <div class="col-8" id="center_side">
            <div class="p-5 rounded  mb-5">

                <div id="myTab2Content" class="tab-content">
                    <!-- A propos de moi -->
                    <h4 class="text-center">Modification du profil</h4>
                    <div id="home2" role="tabpanel" aria-labelledby="home-tab"
                         class="tab-pane fade px-4 py-5 show active">
                        <div class="col-md-12">


                            @using (Html.BeginForm("ModifierConsumer", "Profil", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="card mb-3">
                                    <div class="card-body">
                                        @Html.HiddenFor(m => Model.Id, new { Value = Model.Id })
                                        <div class="row align-items-center align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Nom</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Html.TextBoxFor(m => Model.Profil.Nom, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.Nom)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Prenom</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Html.TextBoxFor(m => Model.Profil.Prenom, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.Prenom)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Pseudo</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Html.TextBoxFor(m => Model.Pseudo, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Pseudo)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Email</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Html.TextBoxFor(m => Model.Profil.Mail, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.Mail)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Téléphone</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Html.TextBoxFor(m => Model.Profil.NumeroTelephone, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.NumeroTelephone)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Date de naissance</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">

                                                <input type="date" name="Profil.DateDeNaissance" value=@Convert.ToDateTime(Model.Profil.DateDeNaissance).Date.ToString("yyyy-MM-dd") class="form-control" />
                                                @*@Html.TextBoxFor(m => Model.Profil.DateDeNaissance, new { Value = Convert.ToDateTime(Model.Profil.DateDeNaissance).Date.ToString("yyyy-MM-dd"), @type = "date", @class = "form-control" })*@
                                                @Html.ValidationMessageFor(m => Model.Profil.DateDeNaissance)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Rue</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Html.TextBoxFor(m => Model.Profil.Adresse, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.Adresse)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Ville</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Html.TextBoxFor(m => Model.Profil.Ville, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.Ville)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Code Postal</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Html.TextBoxFor(m => Model.Profil.CodePostal, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.CodePostal)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Description</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Html.TextBoxFor(m => Model.Profil.Description, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => Model.Profil.Description)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Photo de profil</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="file" id="pictureFile" name="pictureFile" />
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row align-items-center">
                                            <div class="col-sm-12 d-flex justify-content-center">
                                                <input type="submit" value="Valider les changements" class="btn btnGreen"
                                                       style="background-color: #52ab98; color: white;" />
                                                @*<a class="btn btnGreen"
                                                    style="background-color: #52ab98; color: white;"
                                                    target="__blank" href="#">Valider les changements</a>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>


                </div>
            </div>
        </div>

        <!--Partie Droite-->
        <!--<div class="col-2" id="right_side">
            <div class="row mt-5">
                <div class="col-sm-12 d-flex justify-content-center">

                </div>
            </div>
        </div>-->

    </div>


</div>




