}

<!--SECTION HERO-->
<div class="d-flex align-items-start home-hero overflow-x-hidden position-relative" style=" background: url('@Url.Content("~/img/section_hero.svg")') bottom center; background-size: cover;">
    <div class="w-100" style="padding-top:77px">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-5 col-md-8 col-sm-12 col-12 mt-5">
                    <h1 class="mb-4 display-5 mt-3">
                        <div class="font-weight-medium">
                            <div class="text-center">
                                <span>Vous avez besoin de</span>
                            </div>
                            <div class="text-center">
                                <span id="slider" class="typewriter"></span>
                            </div>
                            <div class="d-flex justify-content-center mt-5">
                                @Html.ActionLink("Trouvez votre Helper", "AnnonceCatalogue", "Catalogue", null, null, null, null, new
